<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EvaluationActivity">

        <!--        상단바-->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFE4B5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:src="@drawable/topimg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MENUGEN"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--        식단 평가-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1">


            <!--                식단평가 영역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <!--                    식단 정보란-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#EA5656"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="식단 정보"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>

                <!--식단 정보란 내용 박스-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edge"
                    android:orientation="horizontal">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="5"
                        android:orientation="horizontal"
                        android:rowCount="6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#EEFBEF"
                            android:gravity="center"
                            android:text="기간"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="4"
                            android:layout_gravity="fill"
                            android:background="#DCF8EB"
                            android:gravity="center"
                            android:text="2022-09-16(금)"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="5"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="식단 전체합계"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="기본중량"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="1151"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="4"
                            android:layout_gravity="fill"
                            android:background="#EDD4EB"
                            android:gravity="center"
                            android:text="영양분석"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#E1B9C7"
                            android:gravity="center"
                            android:text="열량(kcal)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#C2E1EF"
                            android:gravity="center"
                            android:text="848.9"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#CFA3B2"
                            android:gravity="center"
                            android:text="탄수화물(g)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="61.4"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#E1B9C7"
                            android:gravity="center"
                            android:text="단백질(g)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#C2E1EF"
                            android:gravity="center"
                            android:text="53.4"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#CFA3B2"
                            android:gravity="center"
                            android:text="지질(g)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="41.8"
                            android:textSize="14dp" />


                    </GridLayout>


                </LinearLayout>


                <!--                    식단 상세영양소란-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#EA5656"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="식단 상세 영양소"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>

                <!--식단 정보란 내용 박스-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edge"
                    android:orientation="horizontal">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:orientation="horizontal"
                        android:rowCount="4"
                        android:stretchColumns="*">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#EEFBEF"
                            android:gravity="center"
                            android:text="메뉴"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#DCF8EB"
                            android:gravity="center"
                            android:text="쌀밥"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="총 당류(g)"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="0.0"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="총 포화지방산(g)"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="0.1"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="총 지방산(g)"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="0.2"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="칼슘(mg)"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="1.8"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="나트륨(mg)"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="0.0"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="콜레스테롤(mg)"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="0.0"
                            android:textSize="16dp" />


                    </GridLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>



    </RelativeLayout>
</layout>