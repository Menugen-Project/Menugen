<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EvaluationActivity">

        <!--        상단바-->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFE4B5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:src="@drawable/topimg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MENUGEN"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--        식단 평가-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1">


            <!--                식단평가 영역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <!--                    식단 정보란-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#EA5656"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="식단 정보"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>

                <!--식단 정보란 내용 박스-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edge"
                    android:orientation="horizontal">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="5"
                        android:orientation="horizontal"
                        android:rowCount="6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="fill"
                            android:background="#EEFBEF"
                            android:gravity="center"
                            android:text="기간"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="4"
                            android:layout_gravity="fill"
                            android:background="#CCF4E2"
                            android:gravity="center"
                            android:text="2022-09-15(목) ~ 2022-09-15(목)"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="5"
                            android:layout_gravity="fill"
                            android:background="#D9E6D9"
                            android:gravity="center"
                            android:text="식단 전체합계"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="기본중량"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="622"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:background="#EFE4E8"
                            android:gravity="center"
                            android:text="변경중량"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="622"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="4"
                            android:layout_gravity="fill"
                            android:background="#EDD4EB"
                            android:gravity="center"
                            android:text="영양분석"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#F4DDD5"
                            android:gravity="center"
                            android:text="열량(kcal)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#C2E1EF"
                            android:gravity="center"
                            android:text="510.5"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#CFA3B2"
                            android:gravity="center"
                            android:text="탄수화물(g)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="65"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#E1B9C7"
                            android:gravity="center"
                            android:text="단백질(g)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#C2E1EF"
                            android:gravity="center"
                            android:text="30.9"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="fill"
                            android:background="#CFA3B2"
                            android:gravity="center"
                            android:text="지질(g)"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_gravity="fill"
                            android:background="#ACCEDD"
                            android:gravity="center"
                            android:text="13.6"
                            android:textSize="14dp" />


                    </GridLayout>


                </LinearLayout>


                <!--                    식단 평가란-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#EA5656"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="식단 평가"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edge"
                    android:orientation="horizontal">

                    <!--                        사용자가 선택한 음식이 뜨는 곳-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/finallist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <!--                        <TextView-->
                    <!--                            android:id="@+id/finalfood"-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="match_parent"-->
                    <!--                            android:layout_margin="5dp"-->
                    <!--                            android:textSize="20sp"/>-->
                </LinearLayout>

                <!--                식단 저장 버튼-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <!--                식단 저장 버튼-->
                    <Button
                        android:id="@+id/SettingFinBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:text="식단 저장하기" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </RelativeLayout>
</layout>